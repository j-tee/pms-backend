# =============================================================================
# YEA POULTRY MANAGEMENT SYSTEM - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!
# =============================================================================

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# SECURITY WARNING: Generate a new secret key for production!
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# REQUIRED: This must be set before Django can run
SECRET_KEY=your-secret-key-here-generate-a-new-one

# Debug mode (NEVER use True in production!)
DEBUG=True

# Allowed hosts (comma-separated, no spaces)
ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend URL for email/SMS links
FRONTEND_URL=http://localhost:3000

# Static and media files paths
STATIC_ROOT=staticfiles
MEDIA_ROOT=media


# =============================================================================
# DATABASE SETTINGS (PostgreSQL with PostGIS)
# =============================================================================

DB_NAME=poultry_db
DB_USER=your_db_username
DB_PASSWORD=your_secure_db_password
DB_HOST=localhost
DB_PORT=5432


# =============================================================================
# JWT TOKEN SETTINGS
# =============================================================================

# Access token lifetime in minutes (default: 60 minutes = 1 hour)
JWT_ACCESS_TOKEN_LIFETIME=60

# Refresh token lifetime in minutes (default: 10080 minutes = 7 days)
JWT_REFRESH_TOKEN_LIFETIME=10080

# JWT Algorithm
JWT_ALGORITHM=HS256


# =============================================================================
# CORS & CSRF SETTINGS
# =============================================================================

# CORS allowed origins (comma-separated, no spaces)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CSRF trusted origins (comma-separated, no spaces)
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000


# =============================================================================
# EMAIL SETTINGS
# =============================================================================

# Email backend
# Development: django.core.mail.backends.console.EmailBackend
# Production: django.core.mail.backends.smtp.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP server settings (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@yea-pms.gov.gh
EMAIL_TIMEOUT=60


# =============================================================================
# SMS SETTINGS (Hubtel - Ghana)
# =============================================================================

# Enable/disable SMS notifications
SMS_ENABLED=False

# Hubtel API credentials (Get from: https://developers.hubtel.com/)
HUBTEL_CLIENT_ID=your-hubtel-client-id
HUBTEL_CLIENT_SECRET=your-hubtel-client-secret
HUBTEL_SENDER_ID=YEA-PMS

# SMS provider
SMS_PROVIDER=console


# =============================================================================
# GOOGLE ADSENSE INTEGRATION
# =============================================================================
# AdSense Management API for viewing ad revenue on admin dashboard
# Setup:
# 1. Go to Google Cloud Console: https://console.cloud.google.com/
# 2. Create a project or select existing
# 3. Enable "AdSense Management API" in APIs & Services
# 4. Create OAuth 2.0 credentials (Web Application type)
# 5. Add authorized redirect URI: {BACKEND_URL}/api/admin/adsense/callback/
# 6. Copy Client ID and Client Secret here
# 7. Get your AdSense Account ID from: https://www.google.com/adsense/

GOOGLE_ADSENSE_CLIENT_ID=your-adsense-oauth-client-id.apps.googleusercontent.com
GOOGLE_ADSENSE_CLIENT_SECRET=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
GOOGLE_ADSENSE_ACCOUNT_ID=pub-XXXXXXXXXXXXXXXX

# Backend URL (used for OAuth redirect URI)
# In production: https://api.yourdomain.com
BACKEND_URL=http://localhost:8000


# =============================================================================
# SOCIAL AUTHENTICATION (OAuth)
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret


# =============================================================================
# PAYSTACK PAYMENT GATEWAY (Ghana)
# =============================================================================

# Paystack API Keys (Get from: https://dashboard.paystack.com/#/settings/developers)
# Use test keys for development, live keys for production
PAYSTACK_SECRET_KEY=sk_test_your_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret

# Paystack Configuration
PAYSTACK_BASE_URL=https://api.paystack.co
PAYSTACK_FEE_BEARER=account
PAYSTACK_SETTLEMENT_SCHEDULE=auto
PAYSTACK_CURRENCY=GHS

# Payment Processing Settings
PAYMENT_RETRY_MAX_ATTEMPTS=3
PAYMENT_RETRY_DELAY_SECONDS=300
PAYMENT_AUTO_REFUND_HOURS=72
REFUND_ELIGIBILITY_HOURS=48


# =============================================================================
# COMMISSION STRUCTURE (SUSPENDED - NOT CURRENTLY APPLIED)
# =============================================================================
# IMPORTANT: Transaction commissions are SUSPENDED. Farmers receive payments
# OFF-PLATFORM and only record sales here. No commission is taken.
#
# Current monetization: GHS 50/month Marketplace Activation Fee only.
#
# These settings are kept for future use if on-platform payment processing
# is enabled via PlatformSettings.enable_transaction_commission = True

COMMISSION_TIER_1_PERCENTAGE=5.0
COMMISSION_TIER_2_PERCENTAGE=3.0
COMMISSION_TIER_3_PERCENTAGE=2.0
COMMISSION_MINIMUM_AMOUNT=2.00


# =============================================================================
# MOBILE MONEY PROVIDERS
# =============================================================================

MTN_MOBILE_MONEY_ENABLED=True
VODAFONE_CASH_ENABLED=True
AIRTELTIGO_MONEY_ENABLED=True


# =============================================================================
# GOOGLE MAPS API SETTINGS
# =============================================================================

# Google Maps Geocoding API Key (optional for GPS coordinate extraction)
# Get your API key from: https://console.cloud.google.com/google/maps-apis/credentials
# 1. Create a new project or select existing project
# 2. Enable "Geocoding API" in APIs & Services
# 3. Create credentials (API Key)
# 4. Restrict the key to Geocoding API only (recommended)
# Free tier: 40,000 requests/month
# Used as fallback when GhanaPost GPS custom decoder is not available
GOOGLE_MAPS_API_KEY=


# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Maximum file upload size in bytes (default: 5MB = 5242880 bytes)
MAX_UPLOAD_SIZE=5242880


# =============================================================================
# SUBSCRIPTION SETTINGS
# =============================================================================

# Marketplace subscription price (GHS per month)
MARKETPLACE_SUBSCRIPTION_PRICE=100.00

# Trial period (days)
MARKETPLACE_TRIAL_DAYS=14

# Grace period after payment due (days)
SUBSCRIPTION_GRACE_PERIOD_DAYS=5


# =============================================================================
# CELERY SETTINGS (Optional - for background tasks)
# =============================================================================

# Uncomment if using Celery for background tasks
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0


# =============================================================================
# REDIS CACHE (Optional)
# =============================================================================

# Uncomment if using Redis for caching
# REDIS_URL=redis://localhost:6379/1


# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log to file
LOG_TO_FILE=False
LOG_FILE_PATH=logs/django.log


