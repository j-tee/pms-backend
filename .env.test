# Test Environment Configuration
# This file sets up a minimal test environment for CI/CD pipelines

# Database - Use SQLite for tests (no PostGIS required)
DATABASE_URL=sqlite:///test_db.sqlite3
DB_ENGINE=django.db.backends.sqlite3

# Disable GeoDjango for tests (avoids GDAL/GEOS dependency)
USE_POSTGIS=False

# Django Settings
DEBUG=True
SECRET_KEY=test-secret-key-not-for-production-use-only-for-testing
ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# Disable external services in tests
SMS_ENABLED=False
EMAIL_BACKEND=django.core.mail.backends.locmem.EmailBackend

# Redis/Celery - Disabled for unit tests
REDIS_ENABLED=False
CELERY_TASK_ALWAYS_EAGER=True
CELERY_TASK_EAGER_PROPAGATES=True

# Authentication
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=10080

# Marketplace
MARKETPLACE_ACTIVATION_FEE=50.00
MARKETPLACE_TRIAL_DAYS=14

# Logging
LOG_LEVEL=WARNING
LOG_TO_FILE=False
